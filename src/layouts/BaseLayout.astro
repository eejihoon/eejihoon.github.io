---
interface Props {
  title: string;
}

import "katex/dist/katex.min.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav><a href="/">home</a> <a href="/about/">about</a></nav>
    <main>
      <slot />
    </main>
  </body>
</html>
